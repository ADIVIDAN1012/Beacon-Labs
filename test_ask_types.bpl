spec test_number() {
    show("Enter a number:")
    firm x = ask { show("") }
    show("Type: " + kind(x))
    show("Value: " + convert x to Text)
}

spec test_boolean() {
    show("Enter 'On' or 'Off':")
    firm x = ask { show("") }
    show("Type: " + kind(x))
}

spec test_nil() {
    show("Enter 'Nil':")
    firm x = ask { show("") }  
    show("Type: " + kind(x))
}

spec test_text() {
    show("Enter some text:")
    firm x = ask { show("") }
    show("Type: " + kind(x))
    show("Value: " + x)
}

show("=== Test 1: Number ===")
test_number()
show("")

show("=== Test 2: Boolean ===")
test_boolean()
show("")

show("=== Test 3: Nil ===")
test_nil()
show("")

show("=== Test 4: Text ===")
test_text()
