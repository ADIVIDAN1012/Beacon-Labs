{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Beacon",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#support"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#numbers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.beacon",
          "begin": "<\\^",
          "end": "\\^>"
        },
        {
          "name": "comment.line.beacon",
          "match": "<(?![\\^=]).*?>"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.beacon",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.beacon",
          "match": "\\\\."
        },
        {
          "name": "meta.embedded.line.beacon",
          "begin": "\\|",
          "end": "\\|",
          "patterns": [
            {
              "include": "$self"
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.beacon",
          "match": "\\b(check|alter|altern|traverse|until|halt|proceed|wait|attempt|trap|conclude|trigger|paral|hold|signal|listen|inlet|by|funcall)\\b"
        },
        {
          "name": "keyword.other.beacon",
          "match": "\\b(spec|blueprint|bridge|shard|prep|forward|firm|solid|toolkit|plug|share|expose|hidden|shielded|internal|adopt|own|link|embed|ask|show|authen|transform|condense|pack|unpack)\\b"
        },
        {
          "name": "storage.type.beacon",
          "match": "\\b(Num|Text|Blame)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.beacon",
          "match": "\\b(On|Off|Nil)\\b"
        }
      ]
    },
    "support": {
        "patterns": [
            {
                "name": "support.function.beacon",
                "match": "\\b(kind|convert)\\b"
            }
        ]
    },
    "operators": {
      "name": "keyword.operator.beacon",
      "match": "(\\+|\\-|\\*|/|==|'\\=|<=|>=|=|<|>)"
    },
    "numbers": {
      "name": "constant.numeric.beacon",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    }
  },
  "scopeName": "source.beacon"
}
