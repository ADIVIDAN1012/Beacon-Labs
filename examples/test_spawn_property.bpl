< Test Spawn and Property - No Methods >

blueprint Box {
    shard value
}

spec main() {
    show("Creating box...")
    firm b = spawn Box()
    show("Box created!")
    
    show("Setting property...")
    b.value = 42
    show("Value set!")
    
    show("Reading property...")
    show(b.value)
    
    show("Test complete!")
}

funcall main()
